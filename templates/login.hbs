<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login | Maximum Gamers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 15px;">
      <div class="text-center mb-4">
        <h3 class="fw-bold">Welcome Back</h3>
        <p class="text-muted">Login to continue</p>
      </div>

      <!-- Login Form -->
      <form action="/login" method="POST">
        <!-- Name -->
        <div class="mb-3">
          <label for="name" class="form-label">Username</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter your username" required>
        </div>

        <!-- Role -->
        <div class="mb-3">
          <label for="role" class="form-label">Role</label>
          <select id="role" name="role" class="form-select" required>
            <option value="">-- Select Role --</option>
            <option value="user">User</option>
            <option value="admin">Admin</option>
          </select>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
        </div>

        <!-- Forgot Password -->
        <div class="d-flex justify-content-between align-items-center mb-3">
          <a href="/reset-password" class="text-decoration-none small">Forgot Password?</a>
        </div>

        <!-- Submit -->
        <div class="d-grid">
          <button type="submit" class="btn btn-dark">Login</button>
        </div>
      </form>

      <!-- Sign Up Link -->
      <div class="text-center mt-3">
        <p class="mb-0">Donâ€™t have an account? <a href="/signup" class="text-decoration-none">Sign Up</a></p>
      </div>
    </div>
  </div>

</body>
</html>
