  <!-- Custom Styles -->
  <style>
    :root {
      --primary-color: #0d6efd;
      --secondary-color: #00ff99;
      --dark-bg: #0a0a0a;
      --card-bg: #111;
      --text-light: #f8f9fa;
      --text-muted: #6c757d;
    }
    
    body {
      background: var(--dark-bg);
      color: var(--text-light);
      padding-bottom: 70px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    /* Navigation Styles */
    .navbar-brand img {
      height: 40px;
    }
    
    .bottom-nav {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: var(--primary-color);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      z-index: 1000;
    }
    
    .bottom-nav .nav-link {
      color: white;
      font-size: 0.75rem;
      padding: 0.5rem;
    }
    
    .bottom-nav .nav-link.active {
      font-weight: bold;
      border-top: 2px solid var(--secondary-color);
    }
    
    /* Card Styles */
    .feature-card {
      transition: all 0.3s ease;
      background: var(--card-bg);
      border: 2px solid var(--secondary-color);
      border-radius: 12px;
      overflow: hidden;
      height: 100%;
    }
    
    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 25px var(--secondary-color);
    }
    
    /* Text Effects */
    h1, h2, h3, h4, h5, h6 {
      text-shadow: 0 0 5px var(--secondary-color);
    }
    
    /* Table Styles */
    table, th, td {
      border-color: var(--secondary-color) !important;
    }
    
    /* Chat Widget */
    .chat-widget {
      position: fixed;
      bottom: 90px;
      right: 20px;
      background: #25d366;
      color: white;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 28px;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      z-index: 1000;
      animation: pulseZoom 1.5s infinite ease-in-out;
    }
    
    .chat-widget:hover {
      background: #1ebe5d;
      transform: scale(1.1);
    }
    
    @keyframes pulseZoom {
      0%, 100% {
        transform: scale(1);
        box-shadow: 0 0 10px #25d366, 0 0 20px #25d366;
      }
      50% {
        transform: scale(1.15);
        box-shadow: 0 0 20px #25d366, 0 0 30px #25d366;
      }
    }
    
    /* Search Highlight */
    mark.search-highlight {
      background: yellow;
      color: black;
      padding: 0 2px;
      border-radius: 3px;
    }
    
    /* Section Spacing */
    section {
      padding: 3rem 0;
    }
    
    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .hero-content {
        padding: 20px;
      }
      
      .hero-title {
        font-size: 2rem;
      }
      
      section {
        padding: 2rem 0;
      }
    }
  </style>
</head>
