<script>
  async function displayTopBar() {
    try {
      // 🚨 Important: fetch from frontend route, not admin
      const res = await fetch('/top-bar/active');
      const data = await res.json();
      const container = document.getElementById('topBarMessages');

      if (!data.length) {
        container.innerHTML = `<span>No announcements</span>`;
        return;
      }

      // Marquee-style auto scroll
      container.innerHTML = `
        <div style="white-space: nowrap; animation: scrollLeft 15s linear infinite;">
          ${data.map(msg => `<span class="mx-4">${msg.content}</span>`).join("")}
        </div>
      `;
    } catch (err) {
      console.error("Error loading top bar:", err);
      document.getElementById('topBarMessages').innerHTML = 
        `<span class="text-danger">Error loading announcements</span>`;
    }
  }

  // Animation for smooth scroll
  const style = document.createElement("style");
  style.innerHTML = `
    @keyframes scrollLeft {
      0%   { transform: translateX(100%); }
      100% { transform: translateX(-100%); }
    }
  `;
  document.head.appendChild(style);

  displayTopBar();
</script>

